<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StrategyInfoActivity">

    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_title_bk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/pic_sys_back"/>

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:textColor="#000"
            android:gravity="center"
            android:text="美食攻略详情"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_strategy_info_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/pic_strategy_info_more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_strategy_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食攻略主题"
            android:layout_gravity="center"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_strategy_info_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#C5C1AA"
                android:textAlignment="center"
                android:text="2019年5月16日 17:36:02"/>
            <TextView
                android:id="@+id/tv_strategy_info_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#C5C1AA"
                android:text="--By 谢大成"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_strategy_info_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你好啊"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="他/她的推荐"
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_strategy_info_foods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_gray_shape"/>
    </LinearLayout>
</LinearLayout>