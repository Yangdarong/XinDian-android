<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xtao.xindian.view.RoundRectImageView
            android:id="@+id/rriv_recommend_user_icon"
            android:layout_margin="8dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/test"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_recommend_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="16sp"
                android:textColor="#27408B"/>
            <TextView
                android:id="@+id/tv_recommend_strategy_title"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天发生了什么有趣的事情"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_recommend_pic_layout"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <!--<ImageView
                android:layout_marginEnd="5dp"
                android:layout_width="75dp"
                android:layout_height="75dp" />-->

            <ImageView
                android:id="@+id/iv_recommend_more"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_recommend_more"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_recommend_strategy_sum"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textColor="#4A708B"
            android:text="共推荐了X道菜品>>"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/CutOfLine" />
</LinearLayout>