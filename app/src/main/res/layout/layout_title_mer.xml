<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_buycar_select"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pic_buycar_select"/>

        <com.xtao.xindian.view.CircleImageView
            android:id="@+id/pic_buycar_mer_icon"
            android:layout_marginStart="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/tv_buycar_mer_name"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textSize="16sp"
            android:text="有间客栈"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/iv_buycar_extend"
            android:layout_gravity="center"
            android:paddingEnd="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pic_buycar_down"/>
    </LinearLayout>
</LinearLayout>