<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_top_nav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTheme"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="#f7cfab">

    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTheme"
        android:orientation="horizontal">

        <EditText
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:text="搜索美食/菜单/用户"
            android:textColor="#f7cfab"
            android:focusable="false"
            android:gravity="center"
            android:background="@drawable/home_search_shape"/>

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/pic_home_buycar"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>