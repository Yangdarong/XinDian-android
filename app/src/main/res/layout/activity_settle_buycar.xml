<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.BuycarSettleActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总金额"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_settle_food_cost"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥99.99"
            android:textSize="24sp"
            android:textColor="#F00"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_settle_food_bk"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_white_shape"
                android:text="返回确认"
                android:textSize="18dp"
                android:textColor="#000"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tv_settle_food_pay"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_login_shape"
                android:text="立即支付"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选购清单"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textColor="#000"/>
    <ListView
        android:id="@+id/lv_settle_food_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </ListView>

</LinearLayout>